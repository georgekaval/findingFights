<main>
  <h3>One FC Fights Page</h3>
  <ul>
    <% for(let i = 0; i < fights.length; i++) { %>
      <li>
        <a class="btn btn-danger" href="/onefc/<%=fights[i].id%>"><%=fights[i].name%> </a>
        <p>Main Event <br> <%=fights[i].fightList[0]%>
        </p>

        <% if(currentUser === undefined){ %>


        <% } else if(currentUser.admin === true){ %>
          <div class="lineUpButtons">
          <a class="btn btn-dark editbuttons" href="/onefc/<%=fights[i].id%>/edit">Edit</a>
          <form  action="/onefc/<%=fights[i].id%>?_method=DELETE" method="POST">
          <button class="btn btn-dark editbuttons" >Delete</button>
          </form>

          </div>
        <% } %>
        <hr>

      </li>
    <% } %>
  </ul>
  <% if(currentUser === undefined){ %>

  <% } else if(currentUser.admin === true){ %>
    <a  class="btn btn-dark"href="ufc/new">Add a fight card</a>
    <% } %>
