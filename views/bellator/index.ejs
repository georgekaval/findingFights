<main>
  <h3>Bellator Fights Page</h3>
  <ul>
    <% for(let i = 0; i < fights.length; i++) { %>
      <li>
        <a href="/bellator/<%=fights[i].id%>"><%=fights[i].name%> </a>
        <p><%=fights[i].fightList[0]%>
        </p>

        <% if(currentUser === undefined){ %>


        <% } else if(currentUser.admin === true){ %>
          <a href="/bellator/<%=fights[i].id%>/edit">Edit</a>
          <form  action="/bellator/<%=fights[i].id%>?_method=DELETE" method="POST">
          <button>Delete</button>
          </form>
        <% } %>


      </li>
    <% } %>
  </ul>

  <a href="bellator/new">Add a fight</a>
</main>
