<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<main>

  <h3>Edit <%=fight.name %> fight</h3>
  <form class="form-select-lg" action="/bellator/<%=fight.id%>?_method=PUT" method="POST">
    <label>Name:
      <input type="text" name="name" value="<%=fight.name%>"/>
    </label>
    <br>
    <br>
    <label>Date:
      <input type="text" name="date" value="<%=fight.date%>"/>
    </label>
    <br>
    <br>
    <label>Where to Watch:
      <input type="text" name="whereToWatch" value="<%=fight.whereToWatch%>"/>
    </label>
    <br>
    <br>
    <label>Location:
      <input type="text" name="location" value="<%=fight.location%>">
    </label>
    <br>
    <br>
    <label>Fight Card:
      <input type="text" name="fightList" value="<%=fight.fightList%>"/>
    </label>
    <br>
    <br>
    <input class="btn btn-danger" type="submit" name="" value="Submit Changes"/>
  </form>




</main>

<%- include('../partials/footer.ejs') %>
